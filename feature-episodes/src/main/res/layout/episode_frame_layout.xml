<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/episode_item_background"
    android:layout_marginBottom="13dp"
    android:paddingHorizontal="6dp"
    android:minWidth="250dp"
    android:maxWidth="300dp"
    android:maxHeight="85dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:fontFamily="@font/lato_bold"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_on_primary"
        tools:text="S01.E09" />

    <View
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:background="@color/color_on_primary" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvEpisodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="The Ricklantis Mixup"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/color_on_primary"
            android:textSize="17sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="8dp"
            />

        <TextView
            android:id="@+id/tvEpisodeReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="September 10, 2017"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/color_on_primary"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="12dp"
            android:layout_marginHorizontal="8dp"
            />


    </LinearLayout>

</LinearLayout>
